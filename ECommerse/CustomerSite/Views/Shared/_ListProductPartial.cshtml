@model IEnumerable<Shared.ViewModel.ProductVM>

<div class="container">
    @if (Model == null || Model.Count() == 0)
    {
        <p class="text-uppercases">no data</p>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-3 text-center">
                    <a href="/product/@item.proID">
                    <div class="product-item px-3 text-center">
                        <img product-src="@item.Image"/>
                        <span class="text-center product-description" >
                            <p>@item.proName</p>
                            <p class="product-price">$ @item.proPrice</p>
                            <p>@item.proDescription</p>
                        </span>
                    </div>
                    </a>
                </div>
            }
        </div>
    }
</div>