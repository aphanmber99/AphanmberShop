@model IEnumerable<Shared.ViewModel.ProductVM>
<div class="settingtext d-block ">@ViewBag.TitleSlider</div>
<div class="container">
    @if (Model == null || Model.Count() == 0)
    {
        <p>no data</p>
    }
    else
    {
        <div id="splide" class="splide">
            <div class="splide__track">
                <ul class="splide__list">
                    @foreach (var item in Model)
                    {
                        <li class="splide__slide">
                            <a href="/product/@item.proID">
                            <div class="product-item px-3 text-center">
                                <img product-src="@item.Image"/>
                                <span class="text-center product-description" >
                                    <p>@item.proName</p>
                                    <p class="product-price">$ @item.proPrice</p>
                                    <p>@item.proDescription</p>
                                </span>
                            </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>
